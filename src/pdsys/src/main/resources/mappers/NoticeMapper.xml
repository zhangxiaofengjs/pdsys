<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zworks.pdsys.mappers.NoticeMapper">
    <resultMap id="noticeResultMap" type="noticeModel" >
        <id column="s_id" property="id"/> 
        <result column="s_comment" property="comment"/>
        <result column="s_job_name" property="jobName"/>  
        <result column="s_create_date" property="createDate"/>
    </resultMap>
    
    <!-- 新增通知-->
	<insert id="add" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
		insert into notice_tbl
		(
		    `c_job_name`,
			`c_comment`
		)
		values
	    <foreach collection="list" item="notice" index="index" separator=",">  
	        (#{notice.jobName},#{notice.comment})  
	    </foreach>
 
	</insert>
	
	<!-- 通知一览 -->
	<select id="queryList" parameterType="java.util.Map" resultMap="noticeResultMap">
		select s.c_id as s_id,
			   s.c_comment as s_comment,
			   s.c_job_name as s_job_name,
			   s.c_create_date as s_create_date 
		from notice_tbl as s 
		<where>
			<if test="notice.filterCond.noticeStart != null">
				and s.c_create_date &gt;= #{notice.filterCond.noticeStart}
			</if>
			<if test="notice.filterCond.noticeEnd != null">
				and s.c_create_date &lt;= #{notice.filterCond.noticeEnd}
			</if>
			<if test="notice.comment != null and notice.comment != ''">
				and s.c_comment like concat('%',#{notice.comment},'%') 
			</if>
		</where>
		order by s_create_date desc 
		<if test="page != null">
			limit #{page.start},#{page.row}
		</if>

	</select>
	
	<select id="selectPageListCount" parameterType="java.util.Map" resultType="int" >
    	select count(1) from notice_tbl
    </select>
</mapper>