<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zworks.pdsys.mappers.OrderMapper">
	<resultMap id="orderResultMap" type="orderModel" >
        <id column="c_id" property="id"/> 
        <result column="c_no" property="no"/>
        <result column="c_order_date" property="orderDate"/>  
        <result column="c_ship_dead_date" property="shipDeadDate"/>  
        <result column="c_ship_date" property="shipDate"/>  
        <result column="c_state" property="state"/>  
        <result column="c_comment" property="comment"/>  
    </resultMap>
    
	<select id="queryList" resultMap="orderResultMap">
		select * from order_tbl 
		<where>
			<if test="no != null and no != ''">
				<choose>
					<when test="filterCond.fuzzyNoSearch != null and filterCond.fuzzyNoSearch">
						and c_no like concat('%',#{no},'%') 
					</when>
	                <otherwise>
						and c_no = #{no}
	                </otherwise>
	            </choose>
			</if>
			<if test="state >-1">
				and c_state = #{state}
			</if>
		</where>
		order by c_order_date desc
	</select>
	
	<select id="queryObject" resultMap="orderResultMap">
		select * from order_tbl where c_id = #{id}
	</select>
	
	<delete id="updateOrderState" parameterType="orderModel">
		update order_tbl 
		<set> 
			`c_state` = #{state}, 
		</set>
		where c_id = #{id}
	</delete>
	
	<insert id="save" parameterType="orderModel" useGeneratedKeys="true" keyProperty="id">
		insert into order_tbl
		(
			`c_no`,
			`c_customer_id`,
			`c_order_date`, 
			`c_ship_dead_date`,
			`c_master_id`,
			`c_comment`,
			`c_state`
			
		)
		values
		(
			#{no},
			#{customer.id},
			#{orderDate},
			#{shipDeadDate},
			#{user.id},
			#{comment},
			0
		)
	</insert>
</mapper>